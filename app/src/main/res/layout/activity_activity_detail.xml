<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    tools:context="io.keepcoding.madridshops.activities.ActivityDetailActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/activity_activity_detail__activity_image"
                tools:src="@drawable/shop_placeholder"
                android:layout_width="368dp"
                android:layout_height="200dp"
                tools:layout_editor_absoluteY="0dp"
                tools:layout_editor_absoluteX="8dp"/>

            <TextView
                android:id="@+id/activity_activity_detail__activity_name"
                tools:text="El Corte Chino (sin premio)"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:gravity="center_horizontal|bottom"
                android:textColor="@android:color/white"
                android:textSize="40sp"
                android:background="@color/colorPrimaryDark"
                android:alpha="0.8"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"/>

            <TextView
                android:id="@+id/activity_activity_detail__activity_address"
                android:layout_below="@id/activity_activity_detail__activity_name"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                tools:text="Address"/>

            <TextView
                android:id="@+id/activity_activity_detail__activity_description"
                android:layout_below="@id/activity_activity_detail__activity_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Description"/>

            <ImageView
                android:id="@+id/activity_activity_detail__activity_map"
                android:layout_below="@id/activity_activity_detail__activity_description"
                tools:src="@drawable/map_placeholder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>
